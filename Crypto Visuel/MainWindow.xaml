        <Label x:Name="F2Lab" Content="File Two not selected...." HorizontalAlignment="Left" Margin="74,126,0,0" VerticalAlignment="Top" Width="350" Height="28" Foreground="White" FontWeight="Bold"/>
        <Label x:Name="F3Lab" Content="File Three not selected...." HorizontalAlignment="Left" Margin="74,178,0,0" VerticalAlignment="Top" Width="350" Height="31" Foreground="White" FontWeight="Bold"/>
