        <TextBox x:Name="TxtB1" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" MouseDoubleClick="SelectAddress" GotKeyboardFocus="SelectAddress"  PreviewMouseLeftButtonDown="SelectivelyIgnoreMouseButton" BorderBrush="Black" Background="#FFE1E3E7" Margin="74,50,0,0" PreviewLostKeyboardFocus="TxtB1_PreviewLostKeyboardFocus" PreviewKeyUp="TxtB1_PreviewKeyUp"/>
