        <Button Content="Select File..." Click="Select1_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Height="24" Margin="429,50,0,0" BorderBrush="Black"/>
        <Button x:Name="Select2" Content="Select File..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Height="24" Click="Select2_Click" Margin="429,102,0,0" BorderBrush="Black"/>
        <Button x:Name="_4" Content="Select File..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Click="Select3_Click" Height="24" Margin="429,154,0,0" BorderBrush="Black"/>
