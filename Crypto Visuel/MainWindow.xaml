        <TextBox x:Name="Key2" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" MouseDoubleClick="SelectAddress" GotKeyboardFocus="SelectAddress"  PreviewMouseLeftButtonDown="SelectivelyIgnoreMouseButton" BorderBrush="Black" Margin="566,102,0,0" Background="#FFD8DADD" />
        <TextBox x:Name="Key3" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" MouseDoubleClick="SelectAddress" GotKeyboardFocus="SelectAddress"  PreviewMouseLeftButtonDown="SelectivelyIgnoreMouseButton" BorderBrush="Black" Margin="566,154,0,0" Background="#FFD8DADD" />
        <Button Content="Save Keys(txt file)&#xA;Warning Not Safe" HorizontalAlignment="Left" Margin="446,217,0,0" VerticalAlignment="Top" Width="121" Height="61" FontWeight="Bold" Click="Button_Click" BorderBrush="Black"/>
        <Label Content="Files to encrypt or decrypt!" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="225" FontWeight="Bold" FontSize="16" Background="{x:Null}"/>
        <Label Content="Keys to use." HorizontalAlignment="Left" Margin="516,10,0,0" VerticalAlignment="Top" Width="129" FontWeight="Bold" FontSize="16"/>
        <Button Content="Encrypt / Decrypt Files" HorizontalAlignment="Left" Margin="589,217,0,0" VerticalAlignment="Top" Width="226" Height="61" Click="ENCrypt_Click" FontWeight="Bold" BorderBrush="Black"/>
        <Label Content="File One :" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="File Two :" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="File Three :" HorizontalAlignment="Left" Margin="5,152,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="28"/>
        <Label Content="Key 1 :" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="516,49,0,0"/>
        <Label Content="Key 2 :" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="516,101,0,0"/>
        <Label Content="Key 3 :" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="516,153,0,0"/>
        <TextBox x:Name="TxtB3" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" MouseDoubleClick="SelectAddress" GotKeyboardFocus="SelectAddress"  PreviewMouseLeftButtonDown="SelectivelyIgnoreMouseButton" Margin="74,154,400.8,0" BorderBrush="Black" Background="#FFE1E3E7" PreviewLostKeyboardFocus="TxtB3_PreviewLostKeyboardFocus" PreviewKeyUp="TxtB3_PreviewKeyUp" />
